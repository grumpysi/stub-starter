{% macro list_products(productsdata) %}
    {% for product in productsdata %}
        <div class="col-md-4 column">
            <div class="product-box">
                <div class="pad">
                    <h3>{{ product.name|default('') }}</h3>
                </div>
                <a href="{{ product.url|default('#') }}"><img src="/assets/img/products/thumbs/{{ product.thumb|default('') }}" /></a>
                <div class="pad">
                    <div class="description">
                        <p>{{ product.shortdesc|default('')|e }}</p>
                    </div>
                    <a href="{{ product.url|default('#') }}" class="link">View Product Details Â»</a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endmacro %}


